// Colors
cDark = #2c2c2c
cLight = #efefef
cErrorBg = #cf5e53
cErrorTitle = #eee
cErrorMsg = #eee

// Fonts
@font-face
  font-family Raleway
  src url('~@/assets/fonts/Raleway-Regular.ttf') font-weight-normal
      url('~@/assets/fonts/Raleway-Bold.ttf') font-weight-bold
      url('~@/assets/fonts/Raleway-Thin.ttf') font-weight-thin
  

fMain = Raleway

// Mixins
user-select()
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-user-select: none; /* Safari 3.1+ */
  -moz-user-select: none; /* Firefox 2+ */
  -ms-user-select: none; /* IE 10+ */
  user-select: none; /* Standard syntax */
 